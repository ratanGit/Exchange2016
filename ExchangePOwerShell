#1. Prerequisites:
function pre-req{
    Install-WindowsFeature AS-HTTP-Activation, Desktop-Experience, NET-Framework-45-Features, RPC-over-HTTP-proxy, RSAT-Clustering, RSAT-Clustering-CmdInterface, `
    RSAT-Clustering-Mgmt, RSAT-Clustering-PowerShell, Web-Mgmt-Console, WAS-Process-Model, Web-Asp-Net45, Web-Basic-Auth, Web-Client-Auth, Web-Digest-Auth, `
    Web-Dir-Browsing, Web-Dyn-Compression, Web-Http-Errors, Web-Http-Logging, Web-Http-Redirect, Web-Http-Tracing, Web-ISAPI-Ext, Web-ISAPI-Filter, `
    Web-Lgcy-Mgmt-Console, Web-Metabase, Web-Mgmt-Console, Web-Mgmt-Service, Web-Net-Ext45, Web-Request-Monitor, Web-Server, Web-Stat-Compression, `
    Web-Static-Content, Web-Windows-Auth, Web-WMI, Windows-Identity-Foundation, RSAT-ADDS, server-media-foundation
    }

pre-req
Restart-Computer

#2. UCMA
cd  ‘c:\myshare\ExchageInstall’
.\UcmaRuntimeSetup.exe 


#Exchange Server
$lic = 'IAcceptExchangeServerLicenseTerms'
$org = 'Pluto'
cd d:

# Prepare Schema
    .\Setup.EXE /PrepareSchema /$lic
    Restart-Computer

#prepare AD
.\Setup.EXE /PrepareAD /OrganizationName:$org /$lic

#Install Exchange (no need to restart)
.\Setup.EXE /Mode:Install /Role:Mailbox /$lic
